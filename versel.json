{
  "version": 2,
  "builds": [
    {
      "src": "my-react-app/api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "my-react-app/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api",
      "dest": "my-react-app/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "my-react-app/dist/$1"
    }
  ]
}
